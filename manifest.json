{
  "manifest_version": 3,
  "name": "FunPay Auto Raise",
  "version": "1.0.2",
  "description": "Автоматическое поднятие лотов на FunPay.",
  "permissions": ["storage", "alarms", "scripting", "cookies"],
  "host_permissions": ["https://funpay.com/*"],
  "background": {
    "service_worker": "background.bundle.js"
  },
  "action": {
    "default_title": "FunPay Auto Raise",
    "default_popup": "index.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "128": "icon.png"
  }
}
